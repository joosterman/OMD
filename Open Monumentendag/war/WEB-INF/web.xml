<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<listener>
		<listener-class>org.omd.MyListener</listener-class>
	</listener>
	 <security-constraint>
        <web-resource-collection>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
	<servlet>
		<servlet-name>UserServlet</servlet-name>
		<servlet-class>org.omd.UserServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserServlet</servlet-name>
		<url-pattern>/user</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>LocationsServlet</servlet-name>
		<servlet-class>org.omd.LocationsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LocationsServlet</servlet-name>
		<url-pattern>/data</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>MessagesServlet</servlet-name>
		<servlet-class>org.omd.MessagesServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MessagesServlet</servlet-name>
		<url-pattern>/messages</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ImageUploadServlet</servlet-name>
		<servlet-class>org.omd.ImageUploadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ImageUploadServlet</servlet-name>
		<url-pattern>/admin/imageUpload</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>AdminServlet</servlet-name>
		<servlet-class>org.omd.AdminServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AdminServlet</servlet-name>
		<url-pattern>/admin</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>app.jsp</welcome-file>
	</welcome-file-list>
</web-app>
