<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<listener>
		<listener-class>org.omd.MyListener</listener-class>
	</listener>
	 <security-constraint>
        <web-resource-collection>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
	<servlet>
		<servlet-name>UserServlet</servlet-name>
		<servlet-class>org.omd.servlet.UserServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserServlet</servlet-name>
		<url-pattern>/user</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>LocationsServlet</servlet-name>
		<servlet-class>org.omd.servlet.LocationsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LocationsServlet</servlet-name>
		<url-pattern>/data</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>LocationImageServlet</servlet-name>
		<servlet-class>org.omd.servlet.LocationImageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LocationImageServlet</servlet-name>
		<url-pattern>/images</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ImageUploadServlet</servlet-name>
		<servlet-class>org.omd.servlet.ImageUploadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ImageUploadServlet</servlet-name>
		<url-pattern>/admin/imageUpload</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>UtilityServlet</servlet-name>
		<servlet-class>org.omd.servlet.UtilityServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UtilityServlet</servlet-name>
		<url-pattern>/utility</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>CommentServlet</servlet-name>
		<servlet-class>org.omd.servlet.CommentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CommentServlet</servlet-name>
		<url-pattern>/comment</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>MessageServlet</servlet-name>
		<servlet-class>org.omd.servlet.MessageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserUploadServlet</servlet-name>
		<url-pattern>/userUpload</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>UserUploadServlet</servlet-name>
		<servlet-class>org.omd.servlet.UserUploadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LikeServlet</servlet-name>
		<url-pattern>/like</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>LikeServlet</servlet-name>
		<servlet-class>org.omd.servlet.LikeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MessageServlet</servlet-name>
		<url-pattern>/message</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>app.jsp</welcome-file>
	</welcome-file-list>
</web-app>
